	},
	"homepage": "https://github.com/iamharshil/conflux-microservices#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"concurrently": "^9.2.1",
		"typescript": "^5.9.3"
	}
}
